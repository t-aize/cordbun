{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "cordbun",
	"version": "0.0.1",
	"type": "module",
	"packageManager": "bun@1.3.4",
	"license": "Apache-2.0",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"biome:check": "biome check --write --unsafe",
		"type-check": "tsc --noEmit",
		"test": "bun test",
		"test:unit": "bun test --filter unit",
		"test:e2e": "bun test --filter e2e",
		"test:coverage": "bun test --coverage",
		"prepare": "husky",
		"clean": "rimraf dist"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"rimraf": "^6.1.2",
		"tsdown": "^0.17.4",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,svelte}": [
			"biome check --write --unsafe --no-errors-on-unmatched"
		]
	}
}
